{
    "name": "fatturaelettronicaphp/sender",
    "description": "Implementazione generica di Sender per l'invio di Fatture Elettroniche ad intermediari per lo SDI",
    "keywords": [
        "Fattura Elettronica",
        "PHP",
        "SDI",
        "Intermediari",
        "Invio Fattura Elettronica"
    ],
    "homepage": "https://github.com/fatturaelettronicaphp/sender",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniele Rosario",
            "email": "daniele@weble.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "php-http/message": "^1.0",
        "guzzlehttp/psr7": "^1.0",
        "php-http/mock-client": "^1.0",
        "nyholm/psr7": "^1.0",
        "php-http/curl-client": "^2.2"
    },
    "suggest": {
        "fatturaelettronicaphp/fattura-elettronica": "Package to read, write and validate Digital Documents (Fatture Elettroniche)"
    },
    "autoload": {
        "psr-4": {
            "FatturaElettronicaPhp\\Sender\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FatturaElettronicaPhp\\Sender\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
